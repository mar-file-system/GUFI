set -e
. @CMAKE_CURRENT_BINARY_DIR@/setup.sh 1

OUTPUT="gufi_treesummary_all.out"

PATH_LIST="path_list"

cleanup() {
    rm -rf "${PATH_LIST}"
}

cleanup_exit() {
    cleanup
    setup_cleanup
}

trap cleanup_exit EXIT

cleanup

(
    echo "directory"
    echo "leaf_directory"
) > "${PATH_LIST}"

(
run_no_sort "${GUFI_TREESUMMARY_ALL} --help"

echo "# Start with no treesummary tables"
    run_sort "${GUFI_QUERY} -d \" \" -S \"SELECT '' FROM tree.sqlite_master WHERE (type == 'table') AND (name == 'treesummary');\" -E \"SELECT rpath(sname, sroll) FROM vrsummary WHERE isroot == 1;\" \"${INDEXROOT}\"" | @SED@ '\%\^$%d;'
echo

echo "# Generate treesummary tables in some directories at level 1"
run_no_sort "${GUFI_TREESUMMARY_ALL} --min-level 1 --subtree-list \"${PATH_LIST}\" \"${INDEXROOT}\"" | @SED@ '\%^Started .*$%d;'

echo "# Query treesummary tables"
run_sort "${GUFI_QUERY} -d \" \" -T \"SELECT rpath(s.sname, s.sroll), t.totsubdirs, t.maxsubdirfiles, t.maxsubdirlinks, t.totfiles, t.totlinks FROM treesummary AS t, vrsummary as s;\" \"${INDEXROOT}\""
echo

echo "# Generate treesummary tables in all directories at level 1"
run_no_sort "${GUFI_TREESUMMARY_ALL} --min-level 1 \"${INDEXROOT}\"" | @SED@ '\%^Started .*$%d;'

echo "# Query treesummary tables"
run_sort "${GUFI_QUERY} -d \" \" -T \"SELECT rpath(s.sname, s.sroll), t.totsubdirs, t.maxsubdirfiles, t.maxsubdirlinks, t.totfiles, t.totlinks FROM treesummary AS t, vrsummary as s;\" \"${INDEXROOT}\""
echo

echo "# Generate treesummary tables in all directories"
run_no_sort "${GUFI_TREESUMMARY_ALL} \"${INDEXROOT}\"" | @SED@ '\%^Started .*$%d;'

echo "# Query treesummary tables"
run_sort "${GUFI_QUERY} -d \" \" -T \"SELECT rpath(s.sname, s.sroll), t.totsubdirs, t.maxsubdirfiles, t.maxsubdirlinks, t.totfiles, t.totlinks FROM treesummary AS t, vrsummary as s;\" \"${INDEXROOT}\""
echo

echo "# Generate treesummary tables if they don't already exist"
run_no_sort "${GUFI_TREESUMMARY_ALL} --dont-reprocess \"${INDEXROOT}\"" | @SED@ '\%^Started .*$%d;'

rm -rf "${SEARCH}/db.db"

echo "# Missing db.db"
run_no_sort "${GUFI_TREESUMMARY_ALL} \"${SEARCH}\"" | @SED@ '\%^Started .*$%d;'

echo "# Multiple paths with --min-level and --subtree-list"
run_no_sort "${GUFI_TREESUMMARY_ALL} --min-level 1 --subtree-list path_list \"${SEARCH}\" \"${SEARCH}\""
) 2>&1 | replace | tee "${OUTPUT}"

@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/gufi_treesummary_all.expected "${OUTPUT}"
rm "${OUTPUT}"
