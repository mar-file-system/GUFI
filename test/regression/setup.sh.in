# source this file in regression test scripts

set -e

if [[ "$#" -ne "1" ]]
then
    echo "Syntax: $0 <generate index>" 1>&2
    exit 1
fi

GENERATE_INDEX="$1"

SRCDIR="prefix"
BASENAME="$(basename ${SRCDIR})"
THREADS=2

TRACE="trace"
BADTRACE="badtrace"
TRACES=()
for (( i = 0; i < THREADS; i++ ));
do
    TRACES+=("${TRACE}.${i}")
done
DELIM="|"
# shellcheck disable=SC2034
BADDELIM="?"

SEARCH="search"
INDEXROOT="${SEARCH}/${BASENAME}"

# skip file (list of directory basenames)
SKIP="skip"

# shellcheck disable=SC2034
USER_ID="$(@ID@ -u)"
# shellcheck disable=SC2034
USER_NAME="$(@ID@ -un)"
# shellcheck disable=SC2034
GROUP_ID="$(@ID@ -g)"
# shellcheck disable=SC2034
GROUP_NAME="$(@ID@ -gn)"
# shellcheck disable=SC2034
TEST_USER_ID="1001"
# shellcheck disable=SC2034
TEST_USER_NAME="user"
# shellcheck disable=SC2034
TEST_GROUP_ID="${TEST_USER_ID}"
# shellcheck disable=SC2034
TEST_GROUP_NAME="group"

# always clean up
setup_cleanup() {
    rm -rf "${CONFIG}" "${SRCDIR}" "${TRACE}" "${TRACES[@]}" "${BADTRACE}" "${SEARCH}" "${SKIP}"
}

trap setup_cleanup EXIT

setup_cleanup

umask 002
export TZ=UTC
export LC_ALL="C"
export PATH="@CMAKE_BINARY_DIR@/scripts:${PATH}"
export PYTHONPATH="@CMAKE_BINARY_DIR@/scripts:@CMAKE_BINARY_DIR@/test:${PYTHONPATH}"

# generate a fake config file
# shellcheck disable=SC2046
CONFIG="$(@PYTHON_INTERPRETER@ -c 'import common, os; print(os.path.realpath(common.CONFIG_PATH))')"
(
    echo "Threads=1"
    echo "Executable=@CMAKE_BINARY_DIR@/src/gufi_query"
    echo "IndexRoot=${INDEXROOT}"
    echo "OutputBuffer=4096"
) > "${CONFIG}"
chmod 666 "${CONFIG}"

echo "directory" > "${SKIP}"

# paths of all executables
SQLITE3="@DEP_INSTALL_PREFIX@/sqlite3/bin/sqlite3"
DELUIDGIDSUMMARYRECS="@CMAKE_BINARY_DIR@/examples/deluidgidsummaryrecs"
GENERATEGIDSUMMARY="@CMAKE_BINARY_DIR@/examples/generategidsummary"
GENERATETREE="@CMAKE_CURRENT_BINARY_DIR@/generatetree.sh"
GENERATEUIDSUMMARY="@CMAKE_BINARY_DIR@/examples/generateuidsummary"
GENGIDSUMMARYAVOIDENTRIESSCAN="@CMAKE_BINARY_DIR@/examples/gengidsummaryavoidentriesscan"
GENUIDSUMMARYAVOIDENTRIESSCAN="@CMAKE_BINARY_DIR@/examples/genuidsummaryavoidentriesscan"
GROUPFILESPACEHOG="@CMAKE_BINARY_DIR@/examples/groupfilespacehog"
GROUPFILESPACEHOGUSESUMMARY="@CMAKE_BINARY_DIR@/examples/groupfilespacehogusesummary"
GUFI_DIR2INDEX="@CMAKE_BINARY_DIR@/src/gufi_dir2index"
GUFI_DIR2TRACE="@CMAKE_BINARY_DIR@/src/gufi_dir2trace"
GUFI_FIND="@CMAKE_CURRENT_BINARY_DIR@/gufi_find.py"
GUFI_GETFATTR="@CMAKE_CURRENT_BINARY_DIR@/gufi_getfattr.py"
GUFI_LS="@CMAKE_CURRENT_BINARY_DIR@/gufi_ls.py"
GUFI_QUERY="@CMAKE_BINARY_DIR@/src/gufi_query"
GUFI_ROLLUP="@CMAKE_BINARY_DIR@/src/gufi_rollup"
GUFI_STAT="@CMAKE_BINARY_DIR@/src/gufi_stat"
GUFI_STATS="@CMAKE_CURRENT_BINARY_DIR@/gufi_stats.py"
GUFI_TRACE2INDEX="@CMAKE_BINARY_DIR@/src/gufi_trace2index"
GUFI_TREESUMMARY="@CMAKE_BINARY_DIR@/src/gufi_treesummary"
GUFI_TREESUMMARY_ALL="@CMAKE_BINARY_DIR@/src/gufi_treesummary_all"
GUFI_UNROLLUP="@CMAKE_BINARY_DIR@/src/gufi_unrollup"
OLDBIGFILES="@CMAKE_BINARY_DIR@/examples/oldbigfiles"
QUERYDBS="@CMAKE_BINARY_DIR@/src/querydbs"
USERFILESPACEHOG="@CMAKE_BINARY_DIR@/examples/userfilespacehog"
USERFILESPACEHOGUSESUMMARY="@CMAKE_BINARY_DIR@/examples/userfilespacehogusesummary"
VERIFYTRACE="@CMAKE_BINARY_DIR@/contrib/verifytrace"
VERIFYTRACEINTREE="@CMAKE_BINARY_DIR@/contrib/verifytraceintree"

AWK="@AWK@"
DIFF="@DIFF@"
GREP="@GREP@"
HEAD="@HEAD@"
SORT="@SORT@"
TAIL="@TAIL@"
WC="@WC@"

# common strings that need replacing
replace() {
    @SED@ "
    s/${SQLITE3//\//\\/}/sqlite3/g;
    s/${DELUIDGIDSUMMARYRECS//\//\\/}/deluidgidsummaryrecs/g;
    s/${GENERATEGIDSUMMARY//\//\\/}/generategidsummary/g;
    s/${GENERATETREE//\//\\/}/generatetree/g;
    s/${GENERATEUIDSUMMARY//\//\\/}/generateuidsummary/g;
    s/${GENGIDSUMMARYAVOIDENTRIESSCAN//\//\\/}/gengidsummaryavoidentriesscan/g;
    s/${GENUIDSUMMARYAVOIDENTRIESSCAN//\//\\/}/genuidsummaryavoidentriesscan/g;
    s/${GROUPFILESPACEHOG//\//\\/}/groupfilespacehog/g;
    s/${GROUPFILESPACEHOGUSESUMMARY//\//\\/}/groupfilespacehogusesummary/g;
    s/${GUFI_DIR2INDEX//\//\\/}/gufi_dir2index/g;
    s/${GUFI_DIR2TRACE//\//\\/}/gufi_dir2trace/g;
    s/${GUFI_FIND//\//\\/}/gufi_find/g;
    s/${GUFI_GETFATTR//\//\\/}/gufi_getfattr/g;
    s/${GUFI_LS//\//\\/}/gufi_ls/g;
    s/${GUFI_QUERY//\//\\/}/gufi_query/g;
    s/${GUFI_ROLLUP//\//\\/}/gufi_rollup/g;
    s/${GUFI_STAT//\//\\/}/gufi_stat/g
    s/${GUFI_STATS//\//\\/}/gufi_stats/g;
    s/${GUFI_TRACE2INDEX//\//\\/}/gufi_trace2index/g;
    s/${GUFI_TREESUMMARY//\//\\/}/gufi_treesummary/g;
    s/${GUFI_TREESUMMARY_ALL//\//\\/}/gufi_treesummary_all/g;
    s/${GUFI_UNROLLUP//\//\\/}/gufi_unrollup/g;
    s/${OLDBIGFILES//\//\\/}/oldbigfiles/g;
    s/${QUERYDBS//\//\\/}/querydbs/g;
    s/${USERFILESPACEHOG//\//\\/}/userfilespacehog/g;
    s/${USERFILESPACEHOGUSESUMMARY//\//\\/}/userfilespacehogusesummary/g;
    s/${VERIFYTRACE//\//\\/}/verifytrace/g;
    s/${VERIFYTRACEINTREE//\//\\/}/verifytraceintree/g;

    s/^ *-e                     compress work items$//g;

    s/${SEARCH//\//\\/}\\///g;
    s/${SEARCH//\//\\/}/${SRCDIR//\//\\/}/g;
    s/${INDEXROOT//\//\\/}/${SRCDIR//\//\\/}/g;

    s/${AWK//\//\\/}/awk/g;
    s/${DIFF//\//\\/}/diff/g;
    s/${GREP//\//\\/}/grep/g;
    s/${HEAD//\//\\/}/head/g;
    s/${SORT//\//\\/}/sort/g;
    s/${TAIL//\//\\/}/tail/g;
    s/${WC//\//\\/}/wc/g;

    s/[[:space:]]*$//g;
    "
}

# argparse help output changes slightly between versions
replace_argparse() {
    @SED@ 's/optional arguments/options/g; s/\[paths \[paths ...\]\]/\[paths ...\]/g;'
}

remove_root() {
    REALSRCDIR="$(realpath ${SRCDIR})"
    @SED@ "s/${REALSRCDIR//\//\\/}\\///g; s/${SRCDIR//\//\\/}\\///g;"
}

run_sort() {
    echo "$" "$@"                             |& replace
    # shellcheck disable=SC2294
    eval "${GUFI_PYTHON_TEST_COVERAGE}" "$@"  |& replace | @SORT@
    echo
}

run_no_sort() {
    echo "$" "$@"                             |& replace
    # shellcheck disable=SC2294
    eval "${GUFI_PYTHON_TEST_COVERAGE}" "$@"  |& replace
    echo
}

# somewhat force ordering of trace file
order_tracefile() {
    @GREP@ "^${SRCDIR}${DELIM}"              "$1"
    @GREP@ "^${SRCDIR}/.hidden${DELIM}"      "$1"
    @GREP@ "^${SRCDIR}/1KB${DELIM}"          "$1"
    @GREP@ "^${SRCDIR}/1MB${DELIM}"          "$1"
    @GREP@ "^${SRCDIR}/file_symlink${DELIM}" "$1"
    @GREP@ "^${SRCDIR}/old_file${DELIM}"     "$1"
    @GREP@ "^${SRCDIR}/repeat_name${DELIM}"  "$1"
    @GREP@ "^${SRCDIR}/directory.*${DELIM}"  "$1"
    @GREP@ "^${SRCDIR}/leaf.*${DELIM}"       "$1"
    @GREP@ "^${SRCDIR}/unusual.*${DELIM}"    "$1"
}

remove_indexing_time() {
    @GREP@ -v "Scouts took total of\|Time Spent Indexing:\|Dirs/Sec:\|Files/Sec"
}

pull_ug_summary_columns() {
    UG="$1"
    RELATION="$2"
    WHERE="$3"

    if [[ "${UG}" = "uid" ]]
    then
        SRC="${USER_ID}"
        DST="${TEST_USER_ID}"
    elif [[ "${UG}" = "gid" ]]
    then
        SRC="${GROUP_ID}"
        DST="${TEST_GROUP_ID}"
    fi

    run_sort "${GUFI_QUERY} -d \" \" -S \"SELECT path(), level(), totfiles, totlinks, '[', ${UG}, minuid, maxuid, mingid, maxgid, ']', minsize, maxsize, totltk, totmtk, totltm, totmtm, totmtg, totmtt, totsize, minmtime, maxmtime, minatime, maxatime, totxattr, mincrtime, maxcrtime, minossint1, maxossint1, totossint1, minossint2, maxossint2, totossint2, minossint3, maxossint3, totossint3, minossint4, maxossint4, totossint4, rectype FROM ${RELATION}${WHERE};\" \"${INDEXROOT}\"" | @SED@ "s/\[ ${SRC} ${USER_ID} ${USER_ID} ${GROUP_ID} ${GROUP_ID} \]/${DST} ${TEST_USER_ID} ${TEST_USER_ID} ${TEST_GROUP_ID} ${TEST_GROUP_ID}/g;"
}

clean_index() {
    INDEX="$1"

    # set some columns to make test easier

    # update xattrs to point to updated inodes
    "${GUFI_QUERY}" -d " " -a -x -w -I "CREATE TABLE temp_xattrs (inode INT64, name TEXT, value TEXT)" -S "INSERT INTO temp_xattrs (inode, name, value) SELECT mtime, xattr_name, xattr_value FROM xsummary WHERE xattr_name IS NOT NULL UNION ALL SELECT mtime, xattr_name, xattr_value FROM xpentries WHERE xattr_name IS NOT NULL;" -E "DELETE FROM xattrs_pwd; INSERT INTO xattrs_pwd SELECT * FROM temp_xattrs; DELETE from temp_xattrs;" "${INDEX}"

    # update inodes
    # ${INDEXROOT} has inode == 16
    "${GUFI_QUERY}" -a -w -S "UPDATE summary SET inode = mtime, size = mtime, ctime = mtime, pinode = 16;" -E "UPDATE entries SET inode = mtime, size = mtime, ctime = mtime" "${INDEX}"

    # ${INDEXROOT} is not a child of itself
    "${SQLITE3}" "${INDEXROOT}/db.db" "UPDATE summary SET pinode = 17 WHERE name == \"${BASENAME}\";"

    # directory/subdirectory and directory/subdirectory/repeat_name need their actual inodes
    DIR="$(@STAT@ -c '%i' ${SRCDIR}/directory/subdirectory)"
    FILE="$(@STAT@ -c '%i' ${SRCDIR}/directory/subdirectory/repeat_name)"
    "${SQLITE3}" "${INDEXROOT}/directory/subdirectory/db.db" "UPDATE summary SET inode = ${DIR}, pinode = 7 WHERE name == 'subdirectory';"
    "${SQLITE3}" "${INDEXROOT}/directory/subdirectory/db.db" "UPDATE entries SET inode = ${FILE} WHERE name == 'repeat_name'"
    "${SQLITE3}" "${INDEXROOT}/directory/subdirectory/db.db" "UPDATE xattrs_pwd SET inode = ${DIR} WHERE inode == 6;"
    "${SQLITE3}" "${INDEXROOT}/directory/subdirectory/db.db" "UPDATE xattrs_pwd SET inode = ${FILE} WHERE inode == 5;"
}

if [[ "${GENERATE_INDEX}" == "1" ]]
then
    # generate the tree
    "${GENERATETREE}" "${SRCDIR}"

    # generate the index
    "${GUFI_DIR2INDEX}" -x "${SRCDIR}" "${SEARCH}" > /dev/null

    clean_index "${INDEXROOT}"
fi
