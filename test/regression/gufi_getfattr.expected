# search
$ gufi_getfattr .

# search with --verbose
$ gufi_getfattr --verbose .
GUFI query is
   gufi_query \
    --threads 1 \
    --output-buffer-size 4096 \
    --delim ' ' \
    -x \
    -a 1 \
    -S 'SELECT substr(rpath(sname, sroll), 8), xattr_name FROM vrxsummary WHERE ((name REGEXP '"'"'^search$'"'"')) AND (isroot == 1) AND (xattr_name REGEXP '"'"'^user\.'"'"')' \
    search

