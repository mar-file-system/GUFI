set -e
. @CMAKE_CURRENT_BINARY_DIR@/setup.sh 1

OUTPUT="compression.out"

D2I="${SEARCH}.d2i"
T2I="${SEARCH}.t2i"

cleanup() {
    rm -rf "${D2I}" "${T2I}"
}

cleanup_exit() {
    cleanup
    setup_cleanup
}

trap cleanup_exit EXIT

cleanup

remove_e() {
    @SED@ 's%--compress%          %g;'
}

# calling gufi_query with and without --compress should result in the same output
compare_output() {
    INDEX="$1"
    ORIG=$(run_sort "\"${GUFI_QUERY}\" -d \" \"            -S \"SELECT name, size, mtime FROM summary;\" -E \"SELECT name, size, mtime FROM entries;\" \"${INDEX}\"")
    COMP=$(run_sort "\"${GUFI_QUERY}\" -d \" \" --compress -S \"SELECT name, size, mtime FROM summary;\" -E \"SELECT name, size, mtime FROM entries;\" \"${INDEX}\"")
    run_no_sort "@DIFF@ <(echo '${ORIG}') <(echo '${COMP}' | remove_e)"
}

(
    # generate with compression
    run_no_sort "\"${GUFI_DIR2INDEX}\"   -x --compress \"${SRCDIR}\" \"${D2I}\""
    run_no_sort "\"${GUFI_DIR2TRACE}\"   -x --compress \"${SRCDIR}\" \"${TRACE}\""
    run_no_sort "\"${GUFI_TRACE2INDEX}\"               \"${TRACE}.0\" \"${T2I}\""

    clean_index "${D2I}/${BASENAME}" 1
    clean_index "${T2I}/${BASENAME}" 1

    compare_output "${INDEXROOT}"
    compare_output "${D2I}/${BASENAME}"
    compare_output "${T2I}/${BASENAME}"
) | remove_indexing_time | replace | tee "${OUTPUT}"

@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/compression.expected "${OUTPUT}"
rm "${OUTPUT}"
