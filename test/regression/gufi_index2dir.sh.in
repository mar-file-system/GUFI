set -e
source @CMAKE_CURRENT_BINARY_DIR@/setup.sh "gufi_index2dir" 1
source @CMAKE_CURRENT_BINARY_DIR@/os_xattr.sh

DST="reconstructed"

cleanup() {
    rm -rf "${DST}"
}

cleanup

(
echo "# ${GUFI_INDEX2DIR} help" | replace
run_no_sort "${GUFI_INDEX2DIR}"

run_no_sort "${GUFI_INDEX2DIR} -n ${THREADS} -x \"${INDEXROOT}\" \"${DST}\""

echo "# Diff Trees"
diff <(find "${SRCDIR}" -mindepth 1 | sort | replace) <(find "${DST}" -mindepth 2 | sed "s/${DST//\//\\/}\\///g" | sort) && echo

echo "# Diff xattrs"
# shellcheck disable=2050
if [[ "@CMAKE_SYSTEM_NAME@" == "APPLE"  ]] || \
   [[ "@CMAKE_SYSTEM_NAME@" == "Darwin" ]]
then
    diff <(find "${SRCDIR}" -exec "@XATTR@" -l -- {} \; 2>&1 | replace | sort) <(find "${DST}" -mindepth 2 -exec "@XATTR@" -l -- {} \; 2>&1 | replace | sed "s/${DST//\//\\/}\\///g" | sort) && echo
else
    GETFATTR_SRCDIR="${SRCDIR/\//}"
    diff <(find "${SRCDIR}" -exec getfattr -P -m ".*" -d {} \; 2>&1 | replace | sed "s/${GETFATTR_SRCDIR//\//\\/}\\//${BASENAME}\//g" | sort) <(find "${DST}" -mindepth 2 -exec getfattr -P -m ".*" -d {} \; 2>&1 | replace | sed "s/${DST//\//\\/}\\///g" | sort) && echo
fi

# bad inputs

run_no_sort "${GUFI_INDEX2DIR} -n ${THREADS} \"${INDEXROOT}\" \"${DST}/${BASENAME}/old_file\""

rm -rf "${SRCDIR}" "${DST}"
run_no_sort "${GUFI_INDEX2DIR} -n ${THREADS} \"${INDEXROOT}\" \"$(dirname ${DST})\""

run_no_sort "${GUFI_INDEX2DIR} -n ${THREADS} \"${INDEXROOT}/db.db\" \"${DST}\""

run_no_sort "${GUFI_INDEX2DIR} -n ${THREADS} \"${INDEXROOT}\" \"\""

run_no_sort "${GUFI_INDEX2DIR} -n 18446744073709551615 \"${INDEXROOT}\" \"${DST}\""
) | tee "${TEST_OUTPUT}"

"${DIFF}" @CMAKE_CURRENT_BINARY_DIR@/gufi_index2dir.expected "${TEST_OUTPUT}"
rm "${TEST_OUTPUT}"
cleanup
setup_cleanup
