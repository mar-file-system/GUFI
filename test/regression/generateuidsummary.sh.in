set -e
source @CMAKE_CURRENT_BINARY_DIR@/setup.sh 1

OUTPUT="generateuidsummary.out"

TEST_UID="$(id -u)"
TEST_GID="$(id -g)"
TEST_ID=1001

pull_columns() {
    RELATION="$1"
    WHERE="$2"
    run_sort "${GUFI_QUERY} -d \" \" -S \"SELECT path(), level(), totfiles, totlinks, '[', uid, minuid, maxuid, mingid, maxgid, ']', minsize, maxsize, totltk, totmtk, totltm, totmtm, totmtg, totmtt, totsize, minmtime, maxmtime, minatime, maxatime, totxattr, mincrtime, maxcrtime, minossint1, maxossint1, totossint1, minossint2, maxossint2, totossint2, minossint3, maxossint3, totossint3, minossint4, maxossint4, totossint4, rectype FROM ${RELATION}${WHERE};\" \"${INDEXROOT}\"" | @SED@ "s/\[ ${TEST_UID} ${TEST_UID} ${TEST_UID} ${TEST_GID} ${TEST_GID} \]/${TEST_ID} ${TEST_ID} ${TEST_ID} ${TEST_ID} ${TEST_ID}/g"
}

(
    run_no_sort "${GENERATEUIDSUMMARY} \"${INDEXROOT}\" \"${THREADS}\""

    # print all rows in summary table
    run_sort "${GUFI_QUERY} -d \" \" -S \"SELECT path(), level(), rectype FROM summary;\" \"${INDEXROOT}\""

    pull_columns "summary" " WHERE rectype == 1"
    pull_columns "vsummaryuser"
) | @TEE@ "${OUTPUT}"

@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/generateuidsummary.expected "${OUTPUT}"
rm "${OUTPUT}"
