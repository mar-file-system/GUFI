set -e
. @CMAKE_CURRENT_BINARY_DIR@/setup.sh 1

OUTPUT="gufi_top_info.out"

# no need for cleanup - info.db is placed into ${SEARCH}

DEL=2
ROWID=10

(
run_no_sort "${GUFI_TOP_INFO} --help"

echo "# Add a row"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" add name test1 start 1 end 1 threads ${THREADS} system regression"

echo "# Add another row"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" add name test2 start 2 end 2 threads ${THREADS} system regression"

echo "# Ignore ordering when adding row"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" add rowid ${ROWID} name test${ROWID} start ${ROWID} end ${ROWID} threads ${THREADS} system regression"

echo "# Update row"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" set ${ROWID} CPU cpu"

echo "# Show keys for row 1"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" show 1 name start end"

echo "# Show keys for row 2"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" show 2 name start end"

echo "# Show keys for row ${ROWID}"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" show ${ROWID} name start end"

echo "# Delete row ${DEL}"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" delete ${DEL}"

echo "# Empty add"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" insert"

echo "# Empty set"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" modify 0"

echo "# Empty delete"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" remove"

echo "# Dump database"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" dump"

echo "# Modify non-existant row"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" set ${DEL} CPU cpu"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" dump"

echo "#####################################"
echo "# Invalid Inputs                    #"
echo "#####################################"

echo "# Non-existent path"
run_no_sort "${GUFI_TOP_INFO} \"${INDEXROOT}/non-existent\" op"

echo "# Path is not parent of indexes"
run_no_sort "${GUFI_TOP_INFO} \"${INDEXROOT}\" op"

echo "# Bad op"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" op"

echo "# Bad key"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" add bad_key value"

echo "# Missing add value"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" add name"

echo "# Missing set id"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" set"

echo "# Missing set value"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" set 0 name"

echo "# Missing show id"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" show"

echo "# Cannot overwrite existing row - must used update"
run_no_sort "${GUFI_TOP_INFO} \"${SEARCH}\" add rowid ${ROWID}"
) | replace | tee "${OUTPUT}"

@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/gufi_top_info.expected "${OUTPUT}"
rm "${OUTPUT}"
