# Start with no treesummary tables
$ gufi_query -d " " -S "SELECT '' FROM tree.sqlite_master WHERE (type == 'table') AND (name == 'treesummary');" -E "SELECT rpath(sname, sroll) FROM vrsummary WHERE isroot == 1;" "prefix"

