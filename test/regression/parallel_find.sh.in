set -e
. @CMAKE_CURRENT_BINARY_DIR@/setup.sh 0

OUTPUT="parallel_find.out"
"${GENERATETREE}" "${SRCDIR}"

(
run_no_sort "${PARALLEL_FIND} -h"

run_no_sort "${PARALLEL_FIND}"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}\""
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/1MB\""

echo "# comparing parallel_find result to find result"
@DIFF@ <(find "${SRCDIR}" | sort) <(${PARALLEL_FIND} "${SRCDIR}" | sort)

echo "# link to a directory with slash at the end"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/directory/subdirectory/directory_symlink/\""

echo "# link to a directory without slash at the end"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/directory/subdirectory/directory_symlink\""

echo "# link to a file without slash at the end"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/file_symlink\""

echo "# mix of files, dirs, links"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/directory/subdirectory/directory_symlink\" \"${SRCDIR}/1MB\" \"${SRCDIR}/\""

echo "# only get directories at level 2"
run_sort "${PARALLEL_FIND} -n ${THREADS} -t d -y 2 -z 2 \"${SRCDIR}\""

echo "# only get links"
run_sort "${PARALLEL_FIND} -n ${THREADS} -t l \"${SRCDIR}\""

echo "# get links and files"
run_sort "${PARALLEL_FIND} -n ${THREADS} -t lf \"${SRCDIR}\""

echo "# remove starting path with newline"
run_sort "${PARALLEL_FIND} -n ${THREADS} -f \"%P\\n\" \"${SRCDIR}\""

echo "# get full path with newline"
run_sort "${PARALLEL_FIND} -n ${THREADS} -f \"\\n\" \"${SRCDIR}\""

echo "# level higher than the level of the tree"
run_sort "${PARALLEL_FIND} -n ${THREADS} -y 10 \"${SRCDIR}\""

echo "# directory with multiple slashes"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}////\""

echo "# multiple starting paths"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/directory/\" \"${SRCDIR}/directory/subdirectory\""

echo "# keep full path with newline"
run_sort "${PARALLEL_FIND} -n ${THREADS} -f \"%p\\n\" \"${SRCDIR}\""

# errors

echo "# empty path"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"\""

echo "# nonexistent file"
run_sort "${PARALLEL_FIND} -n ${THREADS} \"${SRCDIR}/nonexistent_file\""

echo "# single unsupported type"
run_sort "${PARALLEL_FIND} -n ${THREADS} -t s \"${SRCDIR}\""

echo "# mix of supported and unsupported types"
run_sort "${PARALLEL_FIND} -n ${THREADS} -t lfs \"${SRCDIR}\""

) | tee "${OUTPUT}"

@DIFF@ @CMAKE_CURRENT_BINARY_DIR@/parallel_find.expected "${OUTPUT}"
rm "${OUTPUT}"

