import gufi_common
import gufi_distributed

def subtree_cmd(args, filename, _idx, _target):
    return [
        args.gufi_dir2index,
        '-n', str(args.threads),
        '-y', str(args.level),
        '-D', filename,
        args.input_dir,
        args.output_dir,
    ]

def top_cmd(args, _target):
    return [
        args.gufi_dir2index,
        '-n', str(args.threads),
        '-z', str(args.level - 1),
        args.input_dir,
        args.output_dir,
    ]

def parse_args():
    parser = gufi_distributed.parse_args('gufi_dir2index_distributed',
                                         'Script for distributing gufi_dir2index across nodes')

    parser.add_argument('--gufi_dir2index', metavar='path',
                        type=gufi_distributed.is_exec_file,
                        default='gufi_dir2index')

    parser.add_argument('input_dir',
                        type=gufi_distributed.dir_arg,
                        help='Source Tree Root')

    parser.add_argument('output_dir',
                        type=gufi_distributed.new_dir_arg,
                        help='Index Root')

    return parser.parse_args()

def main():
    args = parse_args()

    gufi_distributed.distribute_work(args, args.input_dir, subtree_cmd, top_cmd, False)

if __name__ == '__main__':
    main()
