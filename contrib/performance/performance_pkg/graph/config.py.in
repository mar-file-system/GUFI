from configparser import ConfigParser, ExtendedInterpolation
from matplotlib import pyplot as plt # should be able to get rid of this

from performance_pkg import common

# config sections and keys
RAW_DATA = 'raw_data'                   # section
RAW_DATA_COMMITS = 'commits'            # string list
RAW_DATA_COLUMNS = 'columns'            # string list

OUTPUT = 'output'                       # section
OUTPUT_PATH = 'path'                    # string
OUTPUT_GRAPH_TITLE = 'graph_title'      # string
OUTPUT_DIMENSIONS = 'graph_dimensions'  # integer pair

LINES = 'lines'                         # section
LINES_COLORS = 'colors'                 # string list
LINES_TYPES = 'types'                   # string list
LINES_MARKERS = 'markers'               # string list

AXES = 'axes'                           # section
AXES_HASH_LEN = 'hash_len'              # non-zero integer
AXES_Y_LABEL = 'y_label'                # string
AXES_Y_MIN = 'y_min'                    # number
AXES_Y_MAX = 'y_max'                    # number

ANNOTATIONS = 'annotations'             # section
ANNOTATIONS_SHOW = 'show'               # bool
ANNOTATIONS_PRECISION = 'precision'     # positive integer
ANNOTATIONS_X_OFFSET = 'x_offset'       # number
ANNOTATIONS_Y_OFFSET = 'y_offset'       # number
ANNOTATIONS_TEXT_COLORS = 'text_colors' # string list

ERROR_BAR = 'error_bar'                 # section
ERROR_BAR_SHOW = 'show'                 # bool
ERROR_BAR_PRECISION = 'precision'       # positive integer
ERROR_BAR_MIN_MAX = 'min_max'           # bool
ERROR_BAR_COLORS = 'colors'             # string list
ERROR_BAR_CAP_SIZE = 'cap_size'         # positive integer

def to_list(value, convert=str):
    return [convert(item.strip()) for item in value.split(',')]

def str_list(value):
    return to_list(value)

def int_list(value):
    return to_list(value, int)

def pos_int_list(value):
    values = to_list(value, int)
    for val in values:
        if val < 1:
            raise ValueError('Positive integer list got a non-positive number: {0}'.format(val))
    return values

def read_value(parser, section, key,
               convert, default=None):
    try:
        value = convert(parser.get(section, key))
    except: # pylint: disable=bare-except
        value = default
    return value

def read_bool(parser, section, key, default=None):
    try:
        value = parser.getboolean(section, key)
    except: # pylint: disable=bare-except
        value = default
    return value

def expand_git_identifiers(identifiers):
    commits = []
    for ish in identifiers:
        # try expanding identifier using git
        if '..' in ish:
            expanded = common.run_get_stdout(['git', 'rev-list', ish])
        else:
            expanded = common.run_get_stdout(['git', 'rev-parse', ish])

        # failure to expand still returns the original ish as output
        commits += expanded.split('\n')[-2::-1]  # remove last empty line and reverse list

    return commits

def process(filename):
    parser = ConfigParser(interpolation=ExtendedInterpolation())
    parser.read(filename)

    # raw_data
    raw_data = {}
    user_git_identifiers = read_value(parser,
                                      RAW_DATA, RAW_DATA_COMMITS,
                                      str_list, [])
    raw_data[RAW_DATA_COMMITS] = expand_git_identifiers(user_git_identifiers)
    raw_data[RAW_DATA_COLUMNS] = read_value(parser,
                                            RAW_DATA, RAW_DATA_COLUMNS,
                                            str_list, [])

    # how many columns to pull/lines to plot
    column_count = len(raw_data[RAW_DATA_COLUMNS])

    # output
    output = {}
    output[OUTPUT_PATH] = read_value(parser,
                                     OUTPUT, OUTPUT_PATH,
                                     str, '')
    output[OUTPUT_GRAPH_TITLE] = read_value(parser,
                                            OUTPUT, OUTPUT_GRAPH_TITLE,
                                            str, '')
    dimensions = read_value(parser,
                            OUTPUT, OUTPUT_DIMENSIONS,
                            int_list, [0, 0])[:2]
    output[OUTPUT_DIMENSIONS] = tuple(dimensions)

    # lines
    lines = {}
    colors = plt.rcParams['axes.prop_cycle'].by_key()['color']
    lines[LINES_COLORS] = read_value(parser,
                                     LINES, LINES_COLORS,
                                     str_list, []) + list(colors * column_count)
    lines[LINES_TYPES] = read_value(parser,
                                    LINES, LINES_TYPES,
                                    str_list, []) + (["solid"] * column_count)
    lines[LINES_MARKERS] = read_value(parser,
                                      LINES, LINES_MARKERS,
                                      str_list, []) + (["o"] * column_count)

    # axes
    axes = {}
    axes[AXES_HASH_LEN] = read_value(parser,
                                     AXES, AXES_HASH_LEN,
                                     int, 6)
    axes[AXES_Y_LABEL] = read_value(parser,
                                    AXES, AXES_Y_LABEL,
                                    str, 'Y Axis')

    axes[AXES_Y_MIN] = read_value(parser,
                                  AXES, AXES_Y_MIN,
                                  float, None)
    axes[AXES_Y_MAX] = read_value(parser,
                                  AXES, AXES_Y_MAX,
                                  float, None)
    # annotations
    annotations = {}
    annotations[ANNOTATIONS_SHOW] = read_bool(parser,
                                              ANNOTATIONS, ANNOTATIONS_SHOW,
                                              False)

    annotations[ANNOTATIONS_PRECISION] = read_value(parser,
                                                    ANNOTATIONS, ANNOTATIONS_PRECISION,
                                                    int, 3)
    annotations[ANNOTATIONS_X_OFFSET] = read_value(parser,
                                                   ANNOTATIONS, ANNOTATIONS_X_OFFSET,
                                                   int, 5)
    annotations[ANNOTATIONS_Y_OFFSET] = read_value(parser,
                                                   ANNOTATIONS, ANNOTATIONS_Y_OFFSET,
                                                   int, 5)
    annotations[ANNOTATIONS_TEXT_COLORS] = read_value(parser,
                                                      ANNOTATIONS, ANNOTATIONS_TEXT_COLORS,
                                                      str_list, []) + (["black"] * column_count)

    # error bar
    error_bar = {}
    error_bar[ERROR_BAR_SHOW] = read_bool(parser,
                                          ERROR_BAR, ERROR_BAR_SHOW,
                                          True)
    error_bar[ERROR_BAR_MIN_MAX] = read_bool(parser,
                                             ERROR_BAR, ERROR_BAR_MIN_MAX,
                                             True)
    error_bar[ERROR_BAR_PRECISION] = read_value(parser,
                                                ERROR_BAR, ERROR_BAR_PRECISION,
                                                int, 3)
    error_bar[ERROR_BAR_COLORS] = read_value(parser,
                                             ERROR_BAR, ERROR_BAR_COLORS,
                                             str_list, []) + (['red'] * column_count)

    error_bar[ERROR_BAR_CAP_SIZE] = read_value(parser,
                                               ERROR_BAR, ERROR_BAR_CAP_SIZE,
                                               int, 10)
    return raw_data, output, lines, axes, annotations, error_bar
